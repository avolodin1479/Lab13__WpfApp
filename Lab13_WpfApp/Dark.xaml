<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Style x:Key="WindowStyle">
        <Setter Property="Control.Background" Value="Gray"/>
        <Setter Property="Control.Foreground" Value="White"/>
        <Setter Property="Control.BorderBrush" Value="White"/>
    </Style>
    <Style x:Key="TextBoxStyle" BasedOn="{StaticResource WindowStyle}"/>
    <Style x:Key="ToolBarTrayStyle" BasedOn="{StaticResource WindowStyle}"/>
    <Style x:Key="ToolBarStyle" BasedOn="{StaticResource WindowStyle}"/>
    <Style x:Key="ButtonTrayStyle" BasedOn="{StaticResource WindowStyle}"/>
    <Style x:Key="RadioButtonStyle" BasedOn="{StaticResource WindowStyle}"/>



</ResourceDictionary>